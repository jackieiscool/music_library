<header class="cf" ng-controller="NowPlayingCtrl">
    <img src="assets/scu.png" />
    <h1>Music Player</h1>
    <div class="song-playing">
      <!-- <h2 ng-hide="getAlbum()">Play some of that good soul music from the albums below.</h2> -->
      <!-- <div ng-show="getAlbum()"><audio-player song="getSong()" album="getAlbum()"></audio-player></div> -->
    </div>
  </header>

  <div ng-view></div>
<div ng-controller="AlbumCtrl">
	<ul class="search cf">
	  <li><input ng-model="query" placeholder="Search by artist or album"></li>
	  <li>
	    <span>Sort by:</span>
	    <select ng-model="orderProp">
	      <option value="artist">Artist</option>
	      <option value="title">Album</option>
	    </select></li>
	</ul>
	<ul class="album-list cf">
	  <li ng-repeat="album in albums | filter:query | orderBy:orderProp">
	    <a href="#/albums/{{album.id}}"><img ng-src="{{album.img_url}}" /></a>
	    <h2>{{album.artist.name}}</h2>
	    <h3>{{album.title}}</h3>
	  </li>
	</ul>
</div>

